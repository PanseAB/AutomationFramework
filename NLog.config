<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Debug" internalLogFile="nlog-internal.log" >


  <!-- optional, add some variabeles
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->


  <!-- 
  See https://github.com/nlog/nlog/wiki/Configuration-file 
  for information on customizing logging rules and outputs.
   -->
  <targets>

    <!-- 
    add your targets here 
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->
    <target name="logInfo" xsi:type="File" fileName="${basedir}/../../logs/${date:format=MM-dd-yyyy}/${shortdate} ${level}_${processid}.html"
            archiveFileName="${basedir}/../../logs/${date:format=MM-dd-yyyy}/${shortdate} ${level}_${processid}.{#####}.html"
            archiveAboveSize="1000000"
            archiveNumbering="Sequence"
            concurrentWrites="true"
            keepFileOpen="false"
            encoding="iso-8859-2" >
      <layout xsi:type="LayoutWithHeaderAndFooter">
        <header xsi:type="SimpleLayout" text="&lt;!DOCTYPE html&gt;&lt;html&gt;&lt;head&gt;&lt;style&gt;body{background-color: #d0e4fe;}h1 { color: orange;text-align: center;}p 
            {font-family: &quot;Times New Roman&quot;;font-size: 20px;}
            &lt;/style&gt;&lt;/head&gt;&lt;body&gt;&lt;h1&gt;Automation Report&lt;/h1&gt;"/>
        <layout xsi:type="SimpleLayout" text="&lt;p&gt;${longdate} ${machinename}: ${message}&lt;/p&gt;" />
        <footer xsi:type="SimpleLayout" text="&lt;/body&gt;&lt;/html&gt;"/>
      </layout>
      
    </target>
    <target name="logError" xsi:type="File" fileName="${basedir}/../../logs/${date:format=MM-dd-yyyy}/${shortdate} ${level}_${processid}.html"
            archiveFileName="${basedir}/../../logs/${date:format=MM-dd-yyyy}/${shortdate} ${level}_${processid}.{#####}.html"
            archiveAboveSize="1000000"
            archiveNumbering="Sequence"
            concurrentWrites="true"
            keepFileOpen="false"
            encoding="iso-8859-2" >
        <layout xsi:type="LayoutWithHeaderAndFooter">
            <header xsi:type="SimpleLayout" text="&lt;!DOCTYPE html&gt;&lt;html&gt;&lt;head&gt;&lt;style&gt;body{background-color: #d0e4fe;}h1 { color: orange;text-align: center;}p 
            {font-family: &quot;Times New Roman&quot;;font-size: 20px;}
            &lt;/style&gt;&lt;/head&gt;&lt;body&gt;&lt;h1&gt;Automation Report&lt;/h1&gt;"/>
            <layout xsi:type="SimpleLayout" text="&lt;p&gt;${longdate} ${machinename}: ${message}&lt;/p&gt;" />
            <footer xsi:type="SimpleLayout" text="&lt;/body&gt;&lt;/html&gt;"/>
        </layout>
      
    </target>
    <!--
    Writing events to the a file with the date in the filename. 
    <target xsi:type="File" name="f" fileName="${basedir}/../../logs/${shortdate}/${shortdate}.log"
                  layout="${machinename} ${longdate} ${uppercase:${level}} ${message}" />
    -->  
  </targets>

  <rules>
    <!-- add your logging rules here -->
      <logger name="*" level="Info" writeTo="logInfo" final="true" />
    <logger  name="*" level="Error" writeTo="logError" final="true"/>
    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
  </rules>
</nlog>